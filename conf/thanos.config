/*
 * -------------------------------------------------------------
 *  Nextflow config file for use with Singularity on Thanos at QBIC
 * -------------------------------------------------------------
 * Defines basic usage limits and singularity image id.
 */

/*
*To be improved by process specific configuration asap, once our CFC cluster has the extra options removed - till then, task.attempt in NextFlow is not supported there.
*/

process {
  executor = 'local'
  cpus = 4
}

conda.createTimeout = '1 h'

params {
  publishDirMode = 'symlink' 
  max_memory = 60.GB
  max_cpus = 20
  max_time = 140.h
  igenomes_base = params.genome == 'GRCh37' ? '/home/tkoch/igenomes/' : params.genome == 'GRCh38' ? '/home/tkoch/igenomes/' : ''
}
